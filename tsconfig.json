{
  "compilerOptions": {
    "target": "es2016",
    "module": "CommonJS",
    // "rootDir": "./src",
    "typeRoots": [
      "@types",
      "node_modules/@types",
    ],
    "baseUrl": " src",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}